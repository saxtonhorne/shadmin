<%= form_for @admin_user, as: :admin, url: action_path do |f| %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<br><br>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<br><br>

	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>

	<br><br>

	<%= f.submit 'Update' %>

	<%= link_to 'Cancel', action_path %>

<% end %>