<div class="index">
  <!--todo: switch breadcrumb to dynamic-->
  <ol class="breadcrumb">
    <li>Admin Users</li>
  </ol>
  <ul class="controls">
    <li><%= link_to 'Create New Admin User', shadmin.new_admin_user_path %></li>
  </ul>
  <div class="index-nav">
    <div class="index-nav-count">1-<%= @admin_users.count %> of <%= @admin_users.count %></div>
    <ul class="pagination">
      <li><a class="disabled arrow">&lt;&lt;</a></li>
      <li><a class="active">1</a></li>
      <li><a>2</a></li>
      <li><a>3</a></li>
      <li>&hellip;</li>
      <li><a>6</a></li>
      <li><a>7</a></li>
      <li><a>8</a></li>
      <li><a class="arrow">&gt;&gt;</a></li>
    </ul>
  </div>
  <ul class="index-table">
    <li class="header-row">Email</li>
    <% @admin_users.each do |admin| %>
    <li class="index-table-row">
      <ul class="controls">
        <li><%= link_to admin.email, shadmin.admin_user_path(admin), { :class=>"left" } %></li>
        <li><%= link_to 'Edit', shadmin.edit_admin_user_path(admin) %></li>
        <li><%= link_to 'Delete', shadmin.admin_user_path(admin), method: :delete, data: { confirm: 'Are you sure you want to delete this admin user?' } %></li>
      </ul>
    <% end %>
  </ul>
</div>
